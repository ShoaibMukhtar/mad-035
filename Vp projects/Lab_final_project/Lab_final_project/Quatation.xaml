        <Label x:Name="label1_Copy6" Content="Height" HorizontalAlignment="Left" Margin="53,172,0,0" VerticalAlignment="Top" Width="86"/>
        <TextBox x:Name="Height" HorizontalAlignment="Left" Height="23" Margin="176,175,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="182"/>
        <Label x:Name="label1_Copy7" Content="Wiidth" HorizontalAlignment="Left" Margin="177,172,0,0" VerticalAlignment="Top" Width="86" Grid.Column="1"/>
        <TextBox x:Name="Width" HorizontalAlignment="Left" Height="23" Margin="261,175,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="182" Grid.Column="1"/>
